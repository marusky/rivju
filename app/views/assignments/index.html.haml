%h1 Listing assignments

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Course
      %th
      %th
      %th

  %tbody
    - @assignments.each do |assignment|
      %tr
        %td= assignment.name
        %td= assignment.description
        %td= assignment.course.name
        %td= link_to 'Show', assignment
        %td= link_to 'Edit', edit_assignment_path(assignment)
        %td= button_to 'Destroy', assignment, method: :delete, data: { turbo_confirm: 'Are you sure?' }

%br

= link_to 'New Assignment', new_assignment_path

%h2= t "devise.invitations.new.header"
= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f|
  = render "devise/shared/error_messages", resource: resource
  - resource.class.invite_key_fields.each do |field|
    .field
      = f.label field
      %br/
      = f.text_field field
    .field
      = f.label :type
      = f.select :type, options_for_select(User.types.map { |key, value| [key.humanize, key] }), {prompt: "Select Type"} # TODO; restriction
    .field
      = f.label :classroom_id
      = f.number_field :classroom_id, value: params[:classroom_id]

  .actions
    = f.submit t("devise.invitations.new.submit_button")
